{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,              
    "target": "es5",               
    "lib": ["dom", "es2015"],     
    "skipLibCheck": true,         
    "jsx": "react-native",        
    "moduleResolution": "node",   
    "resolveJsonModule": true,    
    "allowSyntheticDefaultImports": true, 
    "esModuleInterop": true,      
    "noImplicitAny": false,       
    "paths": {                    
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules"],    
  "include": ["**/*.ts", "**/*.tsx"]  
}
